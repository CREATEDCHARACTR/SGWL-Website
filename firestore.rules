rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Base Rule: Allow authenticated admin to do everything
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // --- Public/Client Access Rules ---
    
    // Contracts: Public needs to READ (view contract) and UPDATE (sign it)
    match /contracts/{contractId} {
      allow read, update: if true;
    }

    // Clients: Public needs to READ (get name) and UPDATE (update status on sign)
    match /clients/{clientId} {
      allow read, update: if true;
    }

    // Notifications: Public needs to CREATE (request revisions)
    match /notifications/{notificationId} {
      allow create: if true;
    }

    // Galleries: Public needs to READ (view photos)
    match /galleries/{galleryId} {
      allow read: if true;
    }
  }
}
